{
  "description": "Experiment to inject CPU stress on EC2 instances",
  "targets": {
    "TargetInstances": {
      "resourceType": "aws:ec2:instance",
      "selectionMode": "ALL",
      "resourceArns": [
        "arn:aws:ec2:${AWS_REGION}:${AWS_ACCOUNT_ID}:instance/${INSTANCE_ID}"
      ]
    }
  },
  "actions": {
    "InjectCPUStress": {
      "actionId": "aws:ssm:send-command",
      "description": "Inject CPU stress on target EC2 instances",
      "parameters": {
        "documentName": "AWS-RunShellScript",
        "documentVersion": "$LATEST",
        "documentArn": "arn:aws:ssm:${AWS_REGION}::document/AWS-RunShellScript",
        "parameters": "{\"commands\":[\"stress --cpu 8 --timeout 600\"]}"
      },
      "targets": {
        "Instances": "TargetInstances"
      },
      "startAfter": [],
      "duration": "PT10M"
    }
  },
  "stopConditions": [
    {
      "source": "none"
    }
  ],
  "roleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/${IAM_ROLE}"
}
